# Binance API 配置
# 推荐使用新的 Demo Trading API

# ========== 新的 Demo Trading API (推荐) ==========
# 从 Binance Demo Trading 获取
DEMO_API_KEY=your_demo_api_key_here
DEMO_SECRET_KEY=your_demo_secret_key_here

# ========== 旧的 Testnet API (向后兼容) ==========
# 从 testnet.binance.vision 获取
# TESTNET_API_KEY=your_testnet_api_key_here
# TESTNET_SECRET_KEY=your_testnet_secret_key_here

# ========== 真实交易 API (高风险!) ==========
# 仅用于实盘交易 (强烈不建议!)
# BINANCE_API_KEY=your_real_api_key_here
# BINANCE_SECRET_KEY=your_real_secret_key_here

# ========== 系统配置 ==========
# 设置为 true 使用模拟交易，false 使用实盘交易
USE_TESTNET=true

# LLM API 配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
QWEN_API_KEY=your_qwen_api_key_here

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# 数据库路径 (可选)
# DATABASE_PATH=market_data.db
